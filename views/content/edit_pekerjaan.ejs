                                <% if(data[0]['fotoSpmk']){ %>
                                    <a href="/foto/<%= data[0]['fotoSpmk'] %>" class="badge badge-secondary mt-2" target="_blank" style="font-size: 14px;">Lihat File</a>
                                <% } %>                            
