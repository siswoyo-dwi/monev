                                    <option value="<%= data[0]['perusahaanId'] %>"><%= dataPerusahaan[0]['namaPerusahaan'] %></option>
                                    <% for(var i=0; i<perusahaan.length; i++){ %>
                                        <option  value="<%= perusahaan[i]['id'] %>"><%= perusahaan[i]['namaPerusahaan'] %></option>
                                        <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Pekerjaan</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="" name="namaPekerjaan" value="<%= data[0]['namaPekerjaan'] %>">
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Jenis Pekerjaan</label>
                            <div class="col-sm-10">
                                <select name="jenisPekerjaan" id="" class="form-control">
                                    <option value="<%= data[0]['jenisPekerjaan'] %>"><%= data[0]['jenisPekerjaan'] %></option>
                                    <% for(var i=0; i<sisaJenisPekerjaan.length; i++){ %>
                                        <option value="<%= sisaJenisPekerjaan[i] %>"><%= sisaJenisPekerjaan[i] %></option>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Lokasi Pekerjaan</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="" name="lokasiPekerjaan" value="<%= data[0]['lokasiPekerjaan'] %>">
                            </div>
                        </div>

                       <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Kecamatan Pekerjaan</label>
                            <div class="col-sm-10">
                                <select name="kecamatanId" id="kecamatan" class="form-control autocomplete" data-search="true">
                                    <option value="<%= data[0]['kecamatanId'] %>" ><%= data[0]['nama_kecamatan'] %></option>
                                    <% for(var i=0; i<kecamatan.length; i++){ %>
                                        <% if(data[0]['nama_kecamatan']!==kecamatan[i]['nama_kecamatan']){%>
                                            <option  value="<%= kecamatan[i]['id'] %>"><%= kecamatan[i]['nama_kecamatan'] %></option>
                                        <% } %>
                                    <% } %>
                                </select>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Kelurahan Pekerjaan</label>
                            <div class="col-sm-10">
                                <select name="kelurahanId" id="kelurahan" class="form-control autocomplete" data-search="true">
                                    <option  value="<%= data[0]['kelurahanId'] %>"><%= data[0]['nama_kelurahan'] %></option>
                                    <% for(var i=0; i<kelurahan.length; i++){ %>
                                        <% if(data[0]['nama_kelurahan']!==kelurahan[i]['nama_kelurahan']){%>
                                            <option  value="<%= kelurahan[i]['id'] %>"><%= kelurahan[i]['nama_kelurahan'] %></option>
                                        <% } %>
                                    <% } %>
                                </select>
                            </div>
                        </div>



