                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Upload Dokumen Kontrak</label>
                            <div class="col-sm-10">
                                <input  type="file" class="form-control" id="" name="fotoKontrak" value="<%= data[0]['fotoKontrak'] %>">
                                <% if(data[0]['fotoKontrak']){ %>
                                    <a href="/foto/<%= data[0]['fotoKontrak'] %>" class="badge badge-secondary mt-2" target="_blank" style="font-size: 14px;">Lihat File</a>
                                <% } %>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">DPA</label>
                            <div class="col-sm-10">
                                <input  type="file" class="form-control" id="" name="fotoDPA">
                                <% if(data[0]['fotoDPA']){ %>
                                    <a href="/foto/<%= data[0]['fotoDPA'] %>" class="badge badge-secondary mt-2" target="_blank" style="font-size: 14px;">Lihat File</a>
