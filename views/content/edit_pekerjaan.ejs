                                <% } %>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label for="" class="col-sm-2 col-form-label">Jaminan Pemeliharaan</label>
                            <div class="col-sm-10">
                                <input  type="file" class="form-control" id="" name="jaminanPemeliharaan" value="<%= data[0]['jaminanPemeliharaan'] %>">
                                <% if(data[0]['jaminanPemeliharaan']){ %>
